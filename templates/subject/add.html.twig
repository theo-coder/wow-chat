{% extends 'base.html.twig' %}

{% block title %}{{ "Nouveau sujet" ~ parent() }}{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mt-3 mb-5">
        <a href="{{ path('app_index') }}">
            <img src="{{ asset('images/back.png') }}" alt="Retour" class="me-3" width="60" height="48">
        </a>
        <h1>Ajouter un sujet</h1>
    </div>

    {{ form_start(form) }}
        {{ form_rest(form) }}

        <button class="btn btn-lg btn-primary mt-3">Ajouter le sujet</button>
    {{ form_end(form) }}
{% endblock %}



