{% extends 'base.html.twig' %}

{% block title %}{{ categoryName ~ parent() }}{% endblock %}

{% block body %}
    <ol class="breadcrumb mt-3 mb-5">
        <li class="breadcrumb-item"><a href="{{ path('app_index') }}">Accueil</a></li>
        <li class="breadcrumb-item active">{{ categoryName }}</li>
    </ol>

    <h1 class="mb-4">Visiter nos boards WOW</h1>

    {% if boards is not empty %}
        <div class="row">
            {% for board in boards %}
                <div class="col col-lg-3">
                    <div class="card text-white bg-primary mb-3">
                        <div class="card-header">{{ board.name }}</div>
                        <div class="card-body">
                            <a href="{{ path('board_show', {'name': board.name, 'categoryName': categoryName}) }}" class="btn btn-small btn-info">Choisir ce board</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun board n'a été trouvée ¯\_(ツ)_/¯</p>
    {% endif %}
{% endblock %}
